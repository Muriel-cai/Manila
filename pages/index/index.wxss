/**index.wxss**/
 
.van-icon{
  text-align:center;
  margin-bottom:2px;
}
.conBox{
  width:710rpx;
  height:auto;
  margin:0 auto;
  margin-bottom:20rpx;
  padding-bottom: 10px;
  background: #fff;
  padding: 20rpx;
}
/* .conBox:last-child{
  border-bottom:none;
} */
.picBox{
  width:200rpx;
  height:200rpx;
  float:left;
}
.textBox{
  width:480rpx;
  height:200rpx;
  float:left;
  margin-left:10px;
}
.textBox .title{
  display: block;
  font-size:36rpx;
  line-height:60rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  color:#333;
  font-weight: 700;
}
.textBox .text{
  display: block;
  font-size:30rpx;
  line-height:50rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:3; 
  color:#666;
 
}
.option{
  position:fixed;
  z-index: 999;
  bottom: 0px;
  right:0;
  width:200rpx;
  height: 200rpx;
  background:#ccc;
} 