.textBox .title{
  display: block;
  font-size:36rpx;
  line-height:60rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  color:#333;
  font-weight: 700;
}
.textBox .text{
  display: block;
  line-height:50rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2; 
  color:#666;
  font-size : 14px; 
  margin-bottom: 10rpx;
}
.textBox .time{
  display: block;
  line-height:50rpx;
  overflow: hidden;
  color:#666;
  font-size : 12px; 
  text-align: right;
}
